<%- include('includes/head'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Minhas Reservas</h1>
      <% if (user) { %>
      <p class="text-center lead">Suas reservas estão abaixo:</p>
      <%- include('includes/messages') %>
      <div class="responsive-table">
        <table class="table my-5">
          <thead>
            <tr>
              <th scope="col">Data</th>
              <th scope="col">Turno</th>
              <th scope="col">Bloco</th>
              <th scope="col">Turma</th>
              <th scope="col">Laboratório</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
          <% reservas.forEach(reserva => { %>
            <tr>
              <td><%= reserva.data.toISOString().substring(8,10) + "/" + reserva.data.toISOString().substring(5,7) + "/" + reserva.data.toISOString().substring(0,4) %></td>            
              <td><%= reserva.turno %></td>
              <td><%= reserva.bloco %></td>
              <td><%= reserva.turma %></td>
              <td><%= reserva.lab %></td>
              <td><a href="/reservas/index/<%= reserva._id %>">Editar</a></td>
              <td><a class="text-danger" href="/reservas/delete/<%= reserva._id %>">Apagar</a></td>
            </tr>
          </tbody>
          <% }); %>
          </table>
      </div>
      <% } else {%>
        <p class="text-center lead">É preciso estar logado para acessar seus contatos.</p>
      <% }; %>


    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>