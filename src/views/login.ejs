<%- include('includes/head'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>
      <%- include('includes/messages') %>
      <div class="row">
        <div class="col-lg my-5">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
            <form action="/login/register" method="post">
                <div class="mb-3">
                  <label class="form-label">Nome Completo</label>
                  <input type="text" class="form-control" name="nome" id="cadNome">
                </div>
                <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" id="cadEmail1" aria-describedby="emailHelp">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Senha</label>
                  <input type="password" class="form-control" name="password" id="cadPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
              </form>
        </div>

        <div class="col-lg  my-5">
            <h4>Faça seu login</h4>
            <p>Se você já tem uma conta, faça seu login</p>
            <form action="/login/login" method="post">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer'); %>